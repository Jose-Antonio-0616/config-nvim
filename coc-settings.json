{
  "coc.preferences.extensions": [
    "coc-html",
    "coc-css",
    "coc-tailwindcss",
    "coc-json",
    "coc-tsserver",
    "coc-emmet",
    "coc-ruff",
    "coc-pyright",
    "coc-sh"
  ],

  // --- Configuraciones de Sugerencias (Est√°n bien) ---
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "suggest.enablePreselect": true,
  "suggest.autoTrigger": "always",
  "suggest.minTriggerInputLength": 1,
  "suggest.acceptSuggestionOnEnter": "on",
  "suggest.pumFloatConfig": {
    "border": true,
    "rounded": true
  },

  // --- Formateo al Guardar (Limpio) ---
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "typescript",
    "json",
    "python"
  ],

  // --- PYTHON (Configuraci√≥n Moderna) ---
  "python.analysis.venvPath": ".",
  "python.pythonPath": "python3",

  // --- RUFF (Reemplaza a Black, Flake8, isort, Pylint) ---
  "ruff.enable": true,
  "ruff.organizeImports": true,
  "ruff.format": true,

  // --- JavaScript / TypeScript (para Alpine.js) ---
  "tsserver.enable": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "eslint.enable": true,
  "eslint.filetypes": ["javascript", "typescript"],
  "eslint.options": {
    "extensions": [".js", ".ts"]
  },

  // --- HTML / Emmet (para HTMX) ---
  "html.enable": true,
  "html.suggest.html5": true,
  "html.filetypes": ["html", "htmldjango"],
  "emmet.includeLanguages": {
    "javascript": "javascript",
    "typescript": "typescript",
    "markdown": "markdown",
    "htmldjango": "html"
  },

  // --- CSS / Tailwind ---
  "css.enable": true,
  "css.validate": true,
  "tailwindCSS.experimental.classRegex": [
    "class[:]\s*['\"][^'\"]*['\"]|className[:]\s*['\"][^'\"]*['"]|tw[`]([^`]*)[`]`
  ],
  "tailwindCSS.includeLanguages": {
    "html": "html",
    "javascript": "javascript",
    "htmldjango": "html"
  },

  // --- JSON / SH ---
  "json.enable": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    }
  },

  // --- Diagn√≥sticos (Est√°n bien) ---
  "diagnostic.errorSign": "‚úó",
  "diagnostic.warningSign": "‚ö†",
  "diagnostic.infoSign": "‚Ñπ",
  "diagnostic.hintSign": "üí°",
  "diagnostic.checkCurrentLine": true
}